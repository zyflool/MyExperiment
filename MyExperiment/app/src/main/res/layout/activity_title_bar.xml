<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TitleBar.TitleBarActivity">

    <com.example.myexperiment.TitleBar.ProgressTitleBar
        android:id="@+id/progress_title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <com.example.myexperiment.TitleBar.MyTitleBar
        android:id="@+id/my_title_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="30dp" />

    <com.example.myexperiment.TitleBar.TitleBar
        android:id="@+id/title_bar_popup_window"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="30dp" />
</LinearLayout>
