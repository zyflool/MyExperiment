<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.myexperiment.Notification.NotificationActivity">

    <Button
        android:id="@+id/normal_notification"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="normal"/>
    <Button
        android:id="@+id/fold_notification"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="fold"/>

    <Button
        android:id="@+id/hang_notification"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:text="hang"/>

    <RadioGroup
        android:id="@+id/rg_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_public"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="public"/>
        <RadioButton
            android:id="@+id/rb_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="private"/>
        <RadioButton
            android:id="@+id/rb_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="secret"/>

    </RadioGroup>

</LinearLayout>