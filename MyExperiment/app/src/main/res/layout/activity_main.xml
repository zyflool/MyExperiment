<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="40dp"
    android:paddingEnd="40dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="30dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/drag_floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Drag Floating Action Button"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="RecyclerView"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/card_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="CardView"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/grid_layout_add_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Add View in GridLayout"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/get_compound_drawables"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Test getCompoundDrawables()"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Notification"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/circleImageView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="CircleImageView"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/RxJavaTest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="RxJavaTest"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/FragmentUsingTest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="FragmentUsingTest"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/FloatingViewTest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="FloatingViewTest"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/Animation"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Animation"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/RecyclerViewBackground"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="RecyclerViewBackground"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/calculator"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="calculator"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/title_bar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="TitleBar"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="spinner"
            android:textAllCaps="false"/>

        </LinearLayout>

</ScrollView>